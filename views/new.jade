extends layout

block content
  div.mainSection
    h1(data-test-id="page-header") Add a New API
    form(action="/" method="POST" data-test-id="add-api-form")
      if apiError
        div.error(data-test-id="form-error")= apiError
      div
        label.newAPIFormElement(for="apiName") Name :
        input.newAPIFormElement(type="text" name="apiName" id="apiName" data-test-id="api-name" value=apiDetails.apiName required)
      div
        label.newAPIFormElement(for="apiOwner") Owner :
        input.newAPIFormElement(type="text" name="apiOwner" id="apiOwner" data-test-id="api-owner" value=apiDetails.apiOwner required)
      div
        label.newAPIFormElement(for="apiPath") Path :
        input.newAPIFormElement(type="text" name="apiPath" id="apiPath" data-test-id="api-path" value=apiDetails.apiPath required)
      div
        label.newAPIFormElement(for="apiToken") Token :
        input.newAPIFormElement(type="text" name="apiToken" id="apiToken" data-test-id="api-token" value=apiDetails.apiToken)
      div
        label.newAPIFormElement(for="apiDesc") Description :
        textarea.newAPIFormElement(id="apiDesc" name="apiDesc" data-test-id="api-desc" required)= apiDetails.apiDesc
      div
        input.newAPIFormElement(type="submit" value="Add New API" data-test-id="submit-form")
