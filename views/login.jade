extends layout

block content
  div.mainSection
    h1 Login to Nabu
    if basicAuth == 'yes'
      form(action="/login" method="POST")
        if authError
          div.error= authError
        div
          label.newAPIFormElement(for="userName") User Name : 
          input.newAPIFormElement(type="text" name="userName" id="userName")
        div
          label.newAPIFormElement(for="password") Password : 
          input.newAPIFormElement(type="password" name="password" id="password")
        div
          input.newAPIFormElement(type="submit" value="Login")
    if githubAuth == 'yes'
      div
        a(href="/auth/github") 
          button.margin-left-5px Login with Github
        
        
