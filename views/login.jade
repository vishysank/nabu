extends layout

block content
  div.mainSection
    h1(data-test-id="page-header") Login to Nabu
    if basicAuth == 'yes'
      form(action="/login" method="POST" data-test-id="login-form")
        if authError
          div.error(data-test-id="form-error")= authError
        div
          label.newAPIFormElement(for="userName") User Name:
          input.newAPIFormElement(type="text" name="userName" id="userName" data-test-id="username")
        div
          label.newAPIFormElement(for="password") Password:
          input.newAPIFormElement(type="password" name="password" id="password" data-test-id="password")
        div
          input.newAPIFormElement(type="submit" value="Login"  data-test-id="login-button")
    if githubAuth == 'yes'
      div
        a(href="/auth/github" data-test-id="github-button")
          button.margin-left-5px Login with Github
